# Dashboard Server
PORT=3000
HOST=0.0.0.0

# Set to 'true' to use real GCP/Datadog APIs instead of mock data
USE_REAL_DATA=false

# Datadog API (https://docs.datadoghq.com/api/)
DD_API_KEY=
DD_APP_KEY=
DD_SITE=datadoghq.com

# GCP Cloud Monitoring
# Service account needs monitoring.viewer role on all projects below
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECTS=mad-master,mad-data,mad-audit,mad-looker-enterprise
GCP_PROJECT_ID=mad-master

# BigQuery
# Uses GOOGLE_APPLICATION_CREDENTIALS above
# Service account needs BigQuery Data Viewer and BigQuery Job User roles

# Google OAuth (for editor authentication)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
ALLOWED_DOMAIN=madhive.com

# VulnTrack API
VULNTRACK_API_URL=https://vulntrack.madhive.dev
VULNTRACK_API_KEY=
